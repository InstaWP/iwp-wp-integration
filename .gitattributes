# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# JavaScript files
*.js text eol=lf
*.json text eol=lf

# CSS files
*.css text eol=lf
*.scss text eol=lf

# Markdown files
*.md text eol=lf

# Config files
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.config text eol=lf

# Shell scripts
*.sh text eol=lf

# SQL files
*.sql text eol=lf

